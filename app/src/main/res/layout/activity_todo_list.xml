<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TodoListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/backgroundwelcome"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anek_bangla_semibold"
            android:gravity="center"
            android:text="LIST YOUR WORKS"
            android:textColor="#F0ECEC" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anek_bangla_semibold"
            android:gravity="center"
            android:text="Organize Your Time for being more productive!"
            android:textColor="#F0ECEC" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/backgroundcredits"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="-30dp"
            app:srcCompat="@drawable/list" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_sc_extrabold"
            android:gravity="center"
            android:text="Add New Task"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="@font/arbutus_slab"
            android:gravity="center"
            android:text="Be productive today,and let's make some wonderful word with it!" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/backgroundcredits"
            android:ems="10"
            android:gravity="center"
            android:hint="Make the task!"
            android:inputType="text"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/btnLetsGo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/go" />
    </LinearLayout>

</LinearLayout>