<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F4F6F8"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header with Image and Welcome Text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/signupbackground"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/signup"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="@font/anek_bangla_semibold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please enter your credentials to sign in to UniAssist"
                android:textColor="#E0E0E0"
                android:textSize="16sp"
                android:gravity="center"
                android:fontFamily="@font/anek_bangla_semibold"
                android:paddingTop="6dp" />
        </LinearLayout>

        <!-- Section Title -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in with Email"
            android:textSize="16sp"
            android:textColor="#555555"
            android:fontFamily="@font/anek_bangla_semibold"
            android:layout_marginBottom="12dp" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Email"
            android:padding="14dp"
            android:background="@drawable/emailtextbackground"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/anek_bangla_semibold"
            android:layout_marginBottom="12dp" />

        <!-- Password Input -->
        <EditText
            android:id="@+id/etPass"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Password"
            android:padding="14dp"
            android:background="@drawable/emailtextbackground"
            android:inputType="textPassword"
            android:fontFamily="@font/anek_bangla_semibold"
            android:layout_marginBottom="18dp" />

        <!-- Sign In Button -->
        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#2196F3"
            android:elevation="4dp"
            android:fontFamily="@font/anek_bangla_semibold"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <!-- Sign Up Redirect -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textSize="14sp"
                android:textColor="#555555" />

            <TextView
                android:id="@+id/tvClickSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Sign Up"
                android:textSize="14sp"
                android:textColor="@color/purple_500"
                android:textStyle="bold"
                android:paddingStart="4dp"
                android:fontFamily="@font/anek_bangla_semibold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
